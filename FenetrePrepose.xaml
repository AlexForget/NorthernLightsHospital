                    <Button x:Name="btnDeconnecter1" Cursor="Hand" Content="Déconnecter" HorizontalAlignment="Left" Margin="797,423,0,0" VerticalAlignment="Top" Width="150" Height="25" Click="btnDeconnecter_Click"/>

